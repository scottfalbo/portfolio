@model Portfolio.Pages.Art.ScottFalboArtModel

<h2>Recent Instagram Posts</h2>
<section id="Gallery-Control" class="carousel slide" data-ride="carousel" data-interval="0">
    <div>
        <partial name="Art/_InstaThumbs" />
    </div>
    <div class="show-gallery tattoo-gallery" id="gallery-switch">
        <div class="carousel-inner">
            @foreach (var image in Model.InstagramGallery)
            {
                <figure class="carousel-item @(image == Model.InstagramGallery.First() ? "active" : "")">
                    <img class="d-block w-100" src="@image.ImageURL" alt="Instagram feed image from scottfalboart" />
                </figure>
            }
            <div class="close-gallery">✖</div>
        </div>
        <a class="carousel-control-prev" href="#Gallery-Control" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#Gallery-Control" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>