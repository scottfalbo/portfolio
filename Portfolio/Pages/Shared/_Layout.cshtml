<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Scott Falbo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/reset.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Jura&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Exo+2:wght@200&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="shortcut icon" type="image/jpg" href="~/images/favicon.jpg" />
</head>
<body>
    <header class="header">
        <div class="container">
            <nav class="navbar navbar-expand-md navbar-dark">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <div class="page-title">
                        <img src="https://via.placeholder.com/50" alt="small site logo" />
                        <h1>Scott Falbo</h1>
                    </div>
                </a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#collapsingMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="collapsingMenu">
                    <ul class="nav navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link custom-link" asp-area="" asp-page="/Code/ScottFalboCode"><p class="menu-button">&lt;Code&gt;</p></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link custom-link" asp-area="" asp-page="/Art/ScottFalboArt"><p class="menu-button">&lt;Art&gt;</p></a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3 main">
            @RenderBody()
        </main>
    </div>

    <div class="container">
        <footer class="footer">
            <div class="container">
                <div class="dropup">
                    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Dropdown link
                    </a>

                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <nav>
                            <ul>
                                <li><a asp-area="" asp-page="/Index">&lt;Home&gt;</a></li>
                                <li><a asp-area="" asp-page="/Code/ScottFalboCode">&lt;Code&gt;</a></li>
                                <li><a asp-area="" asp-page="/Art/ScottFalboArt">&lt;Art&gt;</a></li>
                                <li><a asp-area="" asp-page="/Art/Booking">&lt;Booking&gt;</a></li>
                            </ul>
                            <ul>
                                <li><a asp-area="" asp-page="/About">&lt;About&gt;</a></li>
                                <li><a href="https://github.com/scottfalbo/portfolio" target="_blank">&lt;Site Repo&gt;</a></li>
                                <li><a asp-area="" asp-page="/SecretEntrance">&lt;Grumble&gt;</a></li>
                                <li><a href="mailto:scottfalboart@gmail.com">&lt;Contact&gt;</a></li>
                            </ul>
                            <ul>
                                <li><a href="https://github.com/scottfalbo" target="_blank">&lt;GitHub&gt;</a></li>
                                <li><a href="https://www.linkedin.com/mwlite/in/scott-falbo" target="_blank">&lt;LinkedIn&gt;</a></li>
                                <li><a href="https://www.instagram.com/scottfalboart/" target="_blank">&lt;Instagram&gt;</a></li>
                                <li><a href="https://www.studioarcanum.com/" target="_blank">&lt;Arcanum&gt;</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://www.google.com/recaptcha/api.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>




