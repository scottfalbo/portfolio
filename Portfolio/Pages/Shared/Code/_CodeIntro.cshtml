@model Portfolio.Pages.Code.ScottFalboCodeModel

<section class="art-intro-container">
    <div>
        <figure>
            <img src="@Model.HomePage.Selfie" alt="Scott Falbo" />
        </figure>
        <section class="title">
            <p>@Model.HomePage.Title</p>
        </section>
        <div class="gallery-links">
            <ul class="main-menu-nav">
                <li>
                    <a href="https://github.com/scottfalbo" target="_blank">
                        <figure>
                            <img src="/images/site_logos/github.png" alt="" />
                            <figcaption>GitHub</figcaption>
                        </figure>
                    </a>
                </li>
                <li>
                    <a href="https://www.linkedin.com/in/scott-falbo/" target="_blank">
                        <figure>
                            <img src="/images/site_logos/linkedin.png" alt="" />
                            <figcaption>LinkedIn</figcaption>
                        </figure>
                    </a>
                </li>
                <li class="toggle-contact">
                    <figure>
                        <img src="/images/site_logos/mail.png" alt="email: scottfalboart@gmail.com" />
                        <figcaption>Contact</figcaption>
                    </figure>
                </li>
            </ul>
        </div>
    </div>
    <div>
        <div><img src="https://via.placeholder.com/400x50" /></div>
        <article>
            @Model.HomePage.Intro
        </article>

    </div>
</section>