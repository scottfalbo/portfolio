
<section>
    @foreach (var item in Model.ProjectList)
    {
        <article class="project-container">
            <h3>@item.Title</h3>
            <figure>
                <img src="@item.SourceURL" alt="project photo" />
                <figcaption class="project-caption">@item.Description</figcaption>
                <div class="project-link">
                    <a href="@item.RepoLink" target="_blank">&lt;GitHub Repo&gt;</a>
                </div>
                <div class="project-link">
                    <a href="@item.DeployedLink" target="_blank">&lt;Deployed Site&gt;</a>
                </div>
            </figure>
        </article>
    }
</section>