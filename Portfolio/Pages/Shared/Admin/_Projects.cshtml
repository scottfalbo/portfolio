@model Portfolio.Pages.Admin.ProjectLairModel

<section>
    @foreach (var project in Model.ProjectList)
    {
        <div class="project-admin-card">
            <form method="post">
                <div>
                    <div>
                        <input type="text" asp-for="Project.Title" class="form-control" placeholder="@project.Title" value="@project.Title"/>
                    </div>
                    <div>
                        <input type="text" asp-for="Project.Order" class="form-control" placeholder="@project.Order" value="@project.Order"/>
                    </div>
                </div>
                <div>
                    <figure><img src="@project.SourceURL" /></figure>
                    <input type="text" asp-for="Project.SourceURL" class="form-control" placeholder="@project.SourceURL" value="@project.SourceURL"/>
                    <input type="text" asp-for="Project.AltText" class="form-control" placeholder="@project.AltText" value="@project.AltText" />
                </div>
                <div>
                    @Html.TextAreaFor(x => x.Project.Description, new {@class="form-control"})
                    @Html.ValidationMessageFor(x => x.Project.Description)
                </div>
                <div>
                    <input type="text" asp-for="Project.RepoLink" class="form-control" placeholder="@project.RepoLink" value="@project.RepoLink"/>
                </div>
                <div>
                    <input type="text" asp-for="Project.DeployedLink" class="form-control" placeholder="@project.DeployedLink" value="@project.DeployedLink"/>
                </div>
                <input type="hidden" asp-for="Project.Id" value="@project.Id" />
                <div><input class="admin-button" type="submit" value="Update" /></div>
            </form>
            <form asp-page-handler="delete" asp-route-Id="@project.Id" method="post">
                <input type="hidden" value="@project.Id" />
                <input class="admin-button" type="submit" value="Remove" />
            </form>
        </div>
    }
</section>